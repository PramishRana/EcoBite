@model InventoryModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Add Item</h2>
            </hr>
        </div>
       <div class="mb-3 row p-1">
           <label asp-for="FoodItem.FoodItemName" class="p-0"></label>
           <input asp-for="FoodItem.FoodItemName"  class="form-control"/>
           <span asp-validation-for="FoodItem.FoodItemName" class="text-danger"></span>
       </div>
        <div class="mb-3 row p-1">
            <label  asp-for="FoodItem.Category"class="p-0">Category</label>
            <input asp-for="FoodItem.Category" class="form-control" />
            <span asp-validation-for="FoodItem.Category" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Quantity"class="p-0"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DateAdded"class="p-0"></label>
            <input asp-for="DateAdded" class="form-control" />
            <span asp-validation-for="DateAdded" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="FoodItem.MFDate"class="p-0"></label>
            <input asp-for="FoodItem.MFDate" class=" form-control" />
            <span asp-validation-for="FoodItem.MFDate" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label  asp-for="FoodItem.ExpirationDate"class="p-0"></label>
            <input asp-for="FoodItem.ExpirationDate" class="form-control" />
             <span asp-validation-for="FoodItem.ExpirationDate" class="text-danger"></span>

        </div>
        <div class="row p-1">
            <div class="col-6  col-md-3">
                <button type="submit" class="btn bg-success text-light" style="width:150px">Add</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Inventory" asp-action="Index" class="btn btn-outline-secondary  text-dark " style="width:150px">
                    Back
                </a>
            </div>
        </div>
       
        
    </div>
</form>